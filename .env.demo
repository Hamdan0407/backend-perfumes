# PERFUME SHOP - DEMO MODE ENVIRONMENT
# One-command startup for local development
# No external services required!
# Usage: docker compose -f docker-compose.yml --env-file .env.demo up --build

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=8080
ENVIRONMENT=demo
SPRING_PROFILES_ACTIVE=demo

# ==========================================
# DATABASE CONFIGURATION
# Local Docker MySQL - ready to use
# ==========================================
DATABASE_URL=jdbc:mysql://database:3306/perfume_shop?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DATABASE_USERNAME=demo_user
DATABASE_PASSWORD=demo_password_123
DB_ROOT_PASSWORD=demo_root_123
DATABASE_POOL_SIZE=10
DATABASE_MAX_IDLE_TIME=300
DATABASE_CONNECTION_TIMEOUT=10000

# ==========================================
# JWT CONFIGURATION
# Demo secret (safe for local testing)
# ==========================================
JWT_SECRET=demo_jwt_secret_key_for_local_testing_only_min_256_bits_required
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_GRACE_PERIOD=60000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:8080
CORS_MAX_AGE=3600
PASSWORD_ENCODER_STRENGTH=12

# ==========================================
# EMAIL CONFIGURATION
# DEMO MODE: Log to console, no actual sending
# ==========================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=demo@localhost
MAIL_PASSWORD=demo_password
MAIL_FROM=noreply@demo.local
MAIL_ENABLED=false
EMAIL_LOG_ONLY=true
EMAIL_MAX_RETRIES=1
EMAIL_RETRY_DELAY=5000

# ==========================================
# PAYMENT GATEWAY: RAZORPAY (TEST MODE)
# Use these test keys - they don't charge real money
# ==========================================
RAZORPAY_KEY_ID=rzp_test_placeholder_key_id
RAZORPAY_KEY_SECRET=rzp_test_placeholder_key_secret
RAZORPAY_WEBHOOK_SECRET=rzp_test_placeholder_webhook_secret
RAZORPAY_CURRENCY=INR
RAZORPAY_ENABLED=true

# ==========================================
# PAYMENT GATEWAY: STRIPE (TEST MODE - OPTIONAL)
# ==========================================
STRIPE_API_KEY=sk_test_placeholder_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_test_placeholder_webhook_secret
STRIPE_ENABLED=false

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_URL=http://localhost:3000

# ==========================================
# DEMO-SPECIFIC FLAGS
# ==========================================
DEMO_MODE=true
DEMO_SAMPLE_DATA=true
LOG_LEVEL=INFO
DEBUG_MODE=false
