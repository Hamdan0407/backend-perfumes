###############################################################################
# PRODUCTION CONFIGURATION - PRODUCTION ONLY
# MANDATORY ENVIRONMENT VARIABLES REQUIRED FOR STARTUP:
# - DATABASE_URL: jdbc:mysql://host:port/perfume_shop OR jdbc:postgresql://host:port/perfume_shop
# - DATABASE_USERNAME, DATABASE_PASSWORD
# - REDIS_HOST, REDIS_PORT (REQUIRED - Redis is mandatory in production)
# - REDIS_PASSWORD (if Redis requires auth)
# - JWT_SECRET (256+ bits, unique for production)
# - MAIL_USERNAME, MAIL_PASSWORD
# - RAZORPAY_KEY_ID, RAZORPAY_KEY_SECRET, RAZORPAY_WEBHOOK_SECRET (LIVE KEYS)
# - CORS_ORIGINS (production frontend URLs)
# - FRONTEND_URL
#
# APPLICATION WILL FAIL IF REQUIRED VARIABLES ARE NOT SET.
###############################################################################

spring:
  application:
    name: perfume-shop
  
  # ==========================================
  # DATABASE CONFIGURATION - PRODUCTION ONLY
  # ==========================================
  datasource:
    url: ${DATABASE_URL}
    username: ${DATABASE_USERNAME}
    password: ${DATABASE_PASSWORD}
    hikari:
      maximum-pool-size: 20
      minimum-idle: 5
      connection-timeout: 30000
      idle-timeout: 600000
      max-lifetime: 1800000
      leak-detection-threshold: 60000
  
  # ==========================================
  # JPA & HIBERNATE CONFIGURATION
  # ==========================================
  jpa:
    hibernate:
      # VALIDATE ONLY - No schema creation in production
      ddl-auto: validate
    
    show-sql: false
    open-in-view: false
    
    properties:
      hibernate:
        format_sql: false
        jdbc:
          batch_size: 20
          fetch_size: 50
        order_inserts: true
        order_updates: true
  
  # ==========================================
  # REDIS CONFIGURATION - MANDATORY FOR PRODUCTION
  # ==========================================
  redis:
    # REQUIRED: Redis is mandatory in production
    host: ${REDIS_HOST}
    port: ${REDIS_PORT:6379}
    password: ${REDIS_PASSWORD:}
    database: ${REDIS_DATABASE:0}
    timeout: 60000ms
    ssl: ${REDIS_SSL:false}
    
    jedis:
      pool:
        max-active: 20
        max-idle: 10
        min-idle: 5
        max-wait: -1ms
  
  # ==========================================
  # CACHE CONFIGURATION - REDIS BACKED
  # ==========================================
  cache:
    type: redis
    redis:
      time-to-live: 1800000  # 30 minutes for product cache
      cache-null-values: false
      key-prefix: "perfume:"
  
  # ==========================================
  # EMAIL CONFIGURATION - PRODUCTION SMTP
  # ==========================================
  mail:
    host: ${MAIL_HOST:smtp.gmail.com}
    port: ${MAIL_PORT:587}
    username: ${MAIL_USERNAME}
    password: ${MAIL_PASSWORD}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
            required: true
          socketFactory:
            fallback: false
          connectiontimeout: 5000
          timeout: 5000
          writetimeout: 5000
  
  # ==========================================
  # SERVLET CONFIGURATION
  # ==========================================
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB
  
  # ==========================================
  # SESSION MANAGEMENT
  # ==========================================
  session:
    store-type: none # JWT-based, no server sessions
  
  # ==========================================
  # JACKSON CONFIGURATION (JSON Processing)
  # ==========================================
  jackson:
    serialization:
      write-dates-as-timestamps: false
      indent-output: false # Compact JSON in production
    deserialization:
      fail-on-unknown-properties: false
  
  # ==========================================
  # COMPRESSION & PERFORMANCE
  # ==========================================
  compression:
    enabled: true
    min-response-size: 1024 # Compress responses larger than 1KB
    mime-types:
      - application/json
      - application/xml
      - text/html
      - text/xml
      - text/plain
      - text/css
      - application/javascript

# ==========================================
# SERVER CONFIGURATION
# ==========================================
server:
  port: ${PORT:8080}
  servlet:
    context-path: /
    session:
      timeout: 30m # Session timeout (if using sessions)
  
  # Performance tuning
  tomcat:
    max-threads: 200
    min-spare-threads: 10
    accept-count: 100
    max-connections: 10000
    connection-timeout: 20000ms
    keep-alive-timeout: 60000ms
  
  # Error handling
  error:
    include-message: always
    include-binding-errors: always
    include-stacktrace: never # Don't expose stack traces in production
    include-exception: false

# ==========================================
# MANAGEMENT ENDPOINTS (Actuator)
# ==========================================
management:
  endpoints:
    web:
      # Only expose essential endpoints in production
      exposure:
        include: health,info,metrics
      base-path: /actuator
  
  endpoint:
    health:
      show-details: when-authorized # Only show details if authorized
      show-components: when-authorized
  
  metrics:
    export:
      simple:
        enabled: true
  
  server:
    port: 9090 # Use different port for management endpoints

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
app:
  # ==========================================
  # JWT SETTINGS
  # ==========================================
  jwt:
    secret: ${JWT_SECRET}
    expiration: 86400000  # 24 hours
    refresh-expiration: 604800000  # 7 days
    grace-period: 60000  # 1 minute
  
  # ==========================================
  # SECURITY SETTINGS - PRODUCTION
  # ==========================================
  security:
    # CORS Origins - MUST be set for production
    cors-origins: ${CORS_ORIGINS}
    cors-allow-credentials: true
    cors-max-age: 3600
    # JWT Configuration
    jwt-header: Authorization
    jwt-prefix: Bearer 
    # Password strength (bcrypt rounds)
    password-encoder-strength: 12
    # No demo mode in production
    enable-demo-mode: false
  
  # ==========================================
  # RAZORPAY PAYMENT - LIVE KEYS ONLY
  # ==========================================
  razorpay:
    key-id: ${RAZORPAY_KEY_ID}
    key-secret: ${RAZORPAY_KEY_SECRET}
    webhook-secret: ${RAZORPAY_WEBHOOK_SECRET}
    currency: INR
  
  # ==========================================
  # STRIPE PAYMENT GATEWAY
  # ==========================================
  stripe:
    api-key: ${STRIPE_API_KEY:}
    webhook-secret: ${STRIPE_WEBHOOK_SECRET:}
  
  # ==========================================
  # EMAIL CONFIGURATION
  # ==========================================
  email:
    max-retries: 3
    async:
      core-size: 5
      max-size: 10
      queue-capacity: 100
  
  # ==========================================
  # FRONTEND CONFIGURATION
  # ==========================================
  frontend:
    url: ${FRONTEND_URL}

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
logging:
  level:
    # Application logs
    com.perfume: ${APP_LOG_LEVEL:INFO}
    com.perfume.shop: ${APP_LOG_LEVEL:INFO}
    
    # Spring Framework logs
    org.springframework: ${SPRING_LOG_LEVEL:WARN}
    org.springframework.security: ${SPRING_SECURITY_LOG_LEVEL:WARN}
    org.springframework.web: ${SPRING_WEB_LOG_LEVEL:WARN}
    org.springframework.boot: WARN
    
    # Hibernate logs (keep at WARN in production)
    org.hibernate: WARN
    org.hibernate.SQL: WARN
    org.hibernate.type.descriptor.sql.BasicBinder: WARN
    
    # Third-party libraries
    org.apache.catalina: WARN
    org.apache.tomcat: WARN
  
  # File logging configuration
  file:
    name: ${LOG_DIR:/var/log/perfume-shop}/perfume-shop.log
    max-size: ${LOG_MAX_FILE_SIZE:100MB}
    max-history: ${LOG_MAX_BACKUP_INDEX:7}
  
  pattern:
    file: "%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"
    console: "%d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %msg%n"

# ==========================================
# DISTRIBUTED TRACING (Optional - Uncomment to enable)
# ==========================================
# management:
#   tracing:
#     sampling:
#       probability: 0.1  # Sample 10% of requests
