package com.perfume.shop.entity;

import jakarta.persistence.*;
import lombok.*;
import org.hibernate.annotations.CreationTimestamp;
import com.fasterxml.jackson.annotation.JsonIgnoreProperties;

import java.time.LocalDateTime;

/**
 * Conversation History Entity
 * Persists chat conversations for each user across sessions
 */
@Entity
@Table(name = "conversation_history", indexes = {
    @Index(name = "idx_conversation_user_id", columnList = "user_id"),
    @Index(name = "idx_conversation_conversation_id", columnList = "conversation_id"),
    @Index(name = "idx_conversation_created_at", columnList = "created_at"),
    @Index(name = "idx_conversation_session_id", columnList = "session_id")
})
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
@JsonIgnoreProperties({"hibernateLazyInitializer", "handler"})
public class ConversationHistory {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false, length = 100)
    private String conversationId;

    @Column(length = 100)
    private String sessionId;

    @Column(length = 100)
    private String userId;

    @Column(nullable = false, columnDefinition = "TEXT")
    private String userMessage;

    @Column(nullable = false, columnDefinition = "TEXT")
    private String botResponse;

    @Column(length = 50)
    private String userIntent;

    @Column(columnDefinition = "TEXT")
    private String context;

    @Column(name = "message_number", nullable = false)
    private Integer messageNumber;

    @CreationTimestamp
    @Column(nullable = false, updatable = false)
    private LocalDateTime createdAt;

    @Column(nullable = false)
    @Builder.Default
    private Boolean isResolved = false;

    @Column(length = 500)
    private String metadata;
}
