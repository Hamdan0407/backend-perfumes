<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot will automatically configure this when present -->
    
    <!-- =====================================================
         PROPERTY DEFINITIONS
         ===================================================== -->
    <property name="LOG_DIR" value="${LOG_DIR:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}"/>
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/spring.log}}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="LOG_MAX_SIZE" value="${LOG_MAX_FILE_SIZE:-100MB}"/>
    <property name="LOG_MAX_HISTORY" value="${LOG_MAX_BACKUP_INDEX:-7}"/>
    
    <!-- =====================================================
         APPENDERS
         ===================================================== -->
    
    <!-- CONSOLE APPENDER - For development and container logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- FILE APPENDER - For application logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        
        <!-- Rolling policy: Roll over at midnight and when file size exceeds limit -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Define the file naming pattern for archives -->
            <fileNamePattern>${LOG_DIR}/archive/perfume-shop.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            
            <!-- Keep up to 7 days of logs -->
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
            
            <!-- Roll over when file size exceeds limit -->
            <maxFileSize>${LOG_MAX_SIZE}</maxFileSize>
            
            <!-- Maximum total size of all log files (optional) -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Buffer logs for better performance -->
        <immediateFlush>false</immediateFlush>
    </appender>
    
    <!-- ERROR FILE APPENDER - For error logs only -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/error.log</file>
        
        <!-- Only log ERROR and FATAL level messages -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
            <maxFileSize>${LOG_MAX_SIZE}</maxFileSize>
        </rollingPolicy>
        
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ACCESS LOG APPENDER - For HTTP request/response logs -->
    <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/access.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/access.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
            <maxFileSize>${LOG_MAX_SIZE}</maxFileSize>
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- SECURITY AUDIT LOG APPENDER - For security-related events -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/security.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archive/security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
            <maxFileSize>${LOG_MAX_SIZE}</maxFileSize>
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- ASYNC APPENDER - Wraps console for robustness in logs -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    
    <!-- =====================================================
         LOGGERS - Configure specific packages/classes
         ===================================================== -->
    
    <!-- Application Loggers -->
    <logger name="com.perfume" level="DEBUG"/>
    <logger name="com.perfume.shop" level="DEBUG"/>
    
    <!-- Explicitly allow Hibernate diagnostic output -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql" level="TRACE"/>
    <logger name="org.hibernate.orm.model.scanning" level="DEBUG"/>
    <logger name="org.hibernate.tool.schema" level="DEBUG"/>
    
    <!-- Spring Framework Loggers - Relaxed for Debugging -->
    <logger name="org.springframework.jdbc.datasource.init" level="DEBUG"/>
    <logger name="org.springframework.orm.jpa" level="DEBUG"/>
    
    <!-- =====================================================
         PROFILES - Spring profiles for dev/prod
         ===================================================== -->
    
    <!-- Development Profile -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- Default (if no profile is specified) -->
    <springProfile name="!dev,!prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </root>
    </springProfile>
    
</configuration>
